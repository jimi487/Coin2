<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_host"
        app:startDestination="@id/titleFragment">
    <fragment android:id="@+id/titleFragment"
              android:name="com.bohil.coin.TitleFragment"
              tools:layout="@layout/fragment_title"
              android:label="TitleFragment">
        <action android:id="@+id/action_titleFragment_to_disclosureFragment" app:destination="@+id/disclosureFragment"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
                app:popUpTo="@+id/titleFragment"/>
    </fragment>

    <fragment android:id="@+id/disclosureFragment"
              android:name="com.bohil.coin.DisclaimerFragment"
              android:label="DisclosureFragment"
              tools:layout="@layout/disclaimer_fragment">
        <action android:id="@+id/action_disclosureFragment_to_registerFragment" app:destination="@id/registerFragment"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>

    <fragment android:id="@+id/registerFragment"
              android:name="com.bohil.coin.registration.RegisterFragment"
              android:label="RegisterFragment"
              tools:layout="@layout/register_fragment">
        <action android:id="@+id/action_registerFragment_to_previewActivity" app:destination="@id/previewActivity"
                app:popUpTo="@+id/registerFragment" app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <activity android:id="@+id/previewActivity" android:name="com.bohil.coin.PreviewActivity"
              tools:layout="@layout/activity_preview"
              android:label="PreviewActivity"/>

</navigation>