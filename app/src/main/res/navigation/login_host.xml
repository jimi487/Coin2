<?xml version="1.0" encoding="utf-8"?>
<navigation
        android:id="@+id/login_host"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:startDestination="@id/titleFragment">
    <fragment android:id="@+id/titleFragment"
              android:name="com.bohil.coin.login.title.TitleFragment"
              tools:layout="@layout/fragment_title"
              android:label="TitleFragment">
        <action android:id="@+id/action_titleFragment_to_disclosureFragment" app:destination="@+id/disclaimerFragment"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
                app:popUpTo="@+id/titleFragment"/>
        <action android:id="@+id/action_titleFragment_to_mainActivity" app:destination="@id/mainActivity"/>
    </fragment>

    <fragment android:id="@+id/disclaimerFragment"
              android:name="com.bohil.coin.login.disclaimer.DisclaimerFragment"
              android:label="DisclosureFragment"
              tools:layout="@layout/fragment_disclaimer">
        <action android:id="@+id/action_disclaimerFragment_to_signUpFragment" app:destination="@id/signUpFragment"/>
    </fragment>

    <fragment android:id="@+id/registerFragment"
              android:name="com.bohil.coin.login.registration.RegisterFragment"
              android:label="RegisterFragment"
              tools:layout="@layout/fragment_register">
        <action
                android:id="@+id/action_registerFragment_to_previewActivity"
                app:destination="@id/previewActivity"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@+id/registerFragment"
                app:popUpToInclusive="false" />
    </fragment>
    <activity android:id="@+id/previewActivity"
              android:name="com.bohil.coin.login.facedetection.PreviewActivity"
              tools:layout="@layout/activity_preview"
              android:label="PreviewActivity"/>

    <fragment android:id="@+id/signUpFragment"
              android:name="com.bohil.coin.login.signup.SignUpFragment"
              tools:layout="@layout/fragment_sign_up"
              android:label="SignUpFragment">
        <action android:id="@+id/action_signUpFragment_to_registerFragment" app:destination="@id/registerFragment"
                app:popUpTo="@+id/disclaimerFragment" app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>

    <activity android:id="@+id/mainActivity"
              android:name="com.bohil.coin.main.MainActivity"
              tools:layout="@layout/activity_main"
              android:label="MainActivity"/>


</navigation>