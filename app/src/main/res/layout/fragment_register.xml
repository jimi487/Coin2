<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".login.registration.RegisterFragment">

        <!-- //TODO Add small icons next to the text fields-->
        <ImageButton
                android:id="@+id/face_image_button"
                android:layout_width="114dp"
                android:layout_height="108dp"
                android:src="@drawable/ic_action_camera"
                tools:src="@drawable/ic_action_camera"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_action_camera"
                android:contentDescription="@string/face_image_content_description"/>

        <EditText
                android:id="@+id/first_name_edit_text"
                android:layout_width="214dp"
                android:layout_height="46dp"
                android:inputType="textPersonName"
                android:hint="@string/first_name_hint"
                android:ems="10"
                app:layout_constraintStart_toEndOf="@+id/face_image_button"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:autofillHints="@string/first_name_autofill_hint"/>

        <EditText
                android:id="@+id/last_name_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/last_name_hint"
                android:autofillHints="@string/last_name_autofill_hint"
                android:ems="10"
                app:layout_constraintStart_toEndOf="@+id/face_image_button"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/first_name_edit_text"/>

        <Spinner
                android:id="@+id/sex_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/sex_array"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/language_spinner"
                app:layout_constraintStart_toEndOf="@+id/face_image_button" android:layout_marginStart="16dp"/>

        <EditText
                android:id="@+id/age_text_field"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="@string/age"
                android:autofillHints="@string/age_autofill_hint"
                app:layout_constraintTop_toBottomOf="@+id/last_name_edit_text"
                android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/language_spinner"
                android:layout_marginStart="30dp"/>

        <!-- //TODO Create text field where user can type in their language/country and it gets autofilled with chips-->
        <Spinner
                android:id="@+id/language_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/language_array"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/last_name_edit_text"
                app:layout_constraintStart_toEndOf="@+id/face_image_button"
                android:layout_marginStart="16dp"/>
        <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/sex_spinner"
                app:layout_constraintStart_toEndOf="@+id/face_image_button" android:layout_marginStart="16dp"
                android:entries="@array/country_array"/>

        <CheckBox
                android:id="@+id/confirmation_checkbox"
                android:text="@string/confirm_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/finish_button"/>

        <Button
                android:id="@+id/finish_button"
                android:text="@string/finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="false"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>






